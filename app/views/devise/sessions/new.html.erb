<% provide(:title,"SignIn") %>
<div id="singup" class="container">
  <div class="box">
    <div class="box-inner">
      <div class="text-center">
        <h2>ログイン</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="box-email">
          <%= f.label :メールアドレス %><br />
           <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="box-password">
          <div class="a-row">
            <div class="column-left" style="margin-left:-35px">
        　　    <%= f.label :パスワード %>
        　   </div>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
           <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="box-password">
          <div class="a-row">
            <div class="column-left">
              <%= f.label :パスワード確認 %><br />
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
   
        <div class="box-login" style="font-family: HGP行書体">
          <%= f.submit "ログイン" %>
        </div>
        <div class="box-newusr">
          <p><span>------</span> アカウントをお持ちでないお客様ですか？ <span>------</span></p>
          <%= link_to "留学支援システムのアカウントを作成", new_user_registration_path %>
        </div>
      <% end %>
      <div style="margin-top:10px; margin-bottom:-5px">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
