<div id="singup"　class="container">
   <div class="box">
    <div class="box-inner">
 　　 <h2>プロフィール編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="box-email">
      <%= f.label :名前 %><br />
      <%= f.text_field :name  %>
    </div>
    
　  <div class="box-email">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="box-emaily">
      <%= f.label :誕生日 %>
      <p>
        <%= raw sprintf(f.date_select(:birthday, use_month_numbers: true, start_year:  1960,  end_year: (Time.now.year), default:  Date.new(1989, 1, 1), date_separator: '%s'),   '年 ', '月 ') + '日' %>
      </p>
    </div>
    <div class="box-email">
    　<p>郵便番号</p>
      <%= f.text_field :postcode %>
      <p>都道府県</p>
      <%= f.text_field :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県' %><br>
      <p>市区町村</p>
      <%= f.text_field :address_city %>
      <p>丁目・番地</p>
      <%= f.text_field :address_street %>
      <p>建物名</p>
      <%= f.text_field :address_building %>
    </div>
    
    <div class="box-password">
      <div class="a-row">
        <div class="column-left">
          <%= f.label :パスワード %>
        </div> 
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="box-password">
      <div class="a-row">
        <div class="column-left">
          <%= f.label :パスワード確認 %><br />
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="box-login">
      <p><%= f.submit "更新" %></p>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>