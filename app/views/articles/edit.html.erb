<% provide(:title,"投稿編集") %>
<div class = "container" id="articledit">
  <h2>プラン編集</h2>
  <div class="ml-auto posts_button text-right">
      <a class="btn btn-primary" href="/articles">プラン一覧</a>
  </div>
  <%= form_for(@articles, url: "/articles/#{@articles.id}", method: :patch) do |f| %>
  　<div class = "form-grope">
     <b><%= f.label :'画像プレビュー' %></b>
     <div id="pic">
      <%= f.file_field :images, class: 'img_field' %>
      <img id="img1"/>
     </div>
       <p>
        <%= f.check_box :remove_images %>
        <%= f.label :'画像削除'%>
       </p>
    </div>
    <div class="form-group">
      <%= f.label :title, '投稿タイトル' %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'プランのタイトル入力してください。' %>
    </div>
    <div class="form-group">
      <b><%= f.label :price, '費用' %></b>
      <%= f.text_field :price, class: 'form-control', placeholder: ' プランの最低金額を入力してください。ex)100000~'%>
    </div>
    <div class="form-group">
        <b><%= f.label :country, '国' %></b>
        <%= f.text_field :country, class: 'form-control', placeholder: ' プランで行く国を入力してください。'%>
    </div>
    <div class="form-group">
      <b><%= f.label :language, '言語' %></b>
      <%= f.text_field :language, class: 'form-control', placeholder: ' プランで学べる言語を入力してください。'%>
    </div>
    <div class="form-group">
      <b><%= f.label :period, '期間' %></b>
      <%= f.text_field :period, class: 'form-control', placeholder: ' プランの期間を入力してください。'%>
    </div>
    <div class="form-group">
      <%= f.label :description, '投稿内容' %>
      <%= f.text_area :description, class: 'form-control', rows:8, placeholder:'プランの詳細を入力してください。'%>
    </div>
    

    <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
    <small id="submit-tip" class="form-text text-muted">
         投稿する前に投稿内容を見直してください!
    </small>
  <% end %>
</div>
