<div class = "container">
  <h2>投稿編集</h2>
  <div class="ml-auto posts_button text-right">
      <a class="btn btn-outline-info" href="/articles">投稿一覧</a>
  </div>
  <%= form_for(@articles, url: "/articles/#{@articles.id}", method: :patch) do |f| %>
    <div class="form-group">
      <%= f.label :title, '投稿タイトル' %>
      <%= f.text_field :title, class: 'form-control' %>
      <small id="poster-tip" class="form-text text-muted">
            投稿のタイトル入力してください。
      </small>
    </div>
    <div class="form-group">
      <%= f.label :description, '投稿内容' %>
      <%= f.text_area :description, class: 'form-control', rows:8 %>
      <small id="title-tip" class="form-text text-muted">
            投稿の詳細を入力してください。
      </small>
     </div>
     <div class = "form-grope">
       <%= f.label :'画像' %>
       <%= f.file_field :image %>
       <p>
        <%= f.check_box :remove_image %>
        <%= f.label :'画像削除'%>
       </p>
     </div>

    <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
    <small id="submit-tip" class="form-text text-muted">
         投稿する前に投稿内容を見直してください!
    </small>
  <% end %>
</div>
