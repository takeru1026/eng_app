<div class="container">
  <div class="d-flex justify-content-center">
    <h2>記事作成</h2>
    <div class="ml-auto posts_button">
      <a class="btn btn-outline-info" href="/articles">投稿一覧</a>
    </div>
  </div>
  <%= form_with model: Article.new, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title, '投稿タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
        <small id="poster-tip" class="form-text text-muted">
            投稿のタイトル入力してください。
        </small>
      </div>
      <div class="form-group">
        <%= f.label :description, '投稿内容' %>
        <%= f.text_area :description, class: 'form-control', rows:8 %>
        <small id="title-tip" class="form-text text-muted">
            投稿の詳細を入力してください。
        </small>
      </div>

    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <small id="submit-tip" class="form-text text-muted">
         投稿する前に投稿内容を見直してください!
     </small>

  <% end %>
  
</div>
  