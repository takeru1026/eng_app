<div class="container">
  <h1>記事一覧</h1>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <% @articles.each do |articles| %>
        <h5 class="card-title">
         <p><%= articles.title %></p>
        </h5>
        <p class="card-text">
         <%= articles.description %>
        </p>
      <% end %>
      <%= link_to '詳細', "/airticles/#{@airtcle.id}" %>
    </div>
  </div>
  
  <div class="text-right">
    <div class="btn btn-primary">
      <%= link_to "新規投稿", '/articles/new', :style=>"text-decoration:none; color:white" %>
    </div>
  </div>
</div>