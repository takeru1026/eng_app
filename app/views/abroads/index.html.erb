<h2>ユーザー一覧</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <div class="col">
        <th>id</th>
      </div>
      <div scope="col">
        <th>名前</th>
      </div>
      <div class="col">
        <th>メールアドレス</th>
      </div>
      <div class="col">
        <th>誕生日</th>
      </div>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @user.each do |user| %>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.birthday %></td>
      <% end %>
  </tbody>
</table>
