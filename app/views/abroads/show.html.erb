<div id="abroadshow" class="container">
  <h2>ユーザー詳細</h2>
  <table class="table">
	  <thead>
    <% if @user.company_user? %>
		  <tr>
        <th>会社名</th>
        <td><%= @user.name %></td>
      </tr> 
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      
    <% else %>
      <tr>
        <th>名前</th>
        <td><%= @user.name %></td>
      </tr> 
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr> 
      <tr>
        <th>住所</th>
        <td><%= @user.postcode %></td>
      </tr>
      <tr>
        <th></th>
        <td><%= @user.prefecture_code %></td>
      </tr>
      <tr>
        <th></th>
        <td><%= @user.address_city %><%= @user.address_street %><%= @user.address_building %></td>
      </tr>
    <% end %>
    </thead>
  </table>
  <% if @article %>
    <div class="panel panel-default">
      <div class="panel-heading">記事</div>
      <% @user.articles.each do |article| %>
        <ul class="list-group">
          <li class="list-group-item"><%= link_to article.title, "/articles/#{article.id}" %>
            <a href="/articles/<%= article.id %>" class="stretched-link"> </a>
          </li>
        </ul>
      <% end %>
    </div>
  <% else %>
  <div class="good">
    <%= link_to "いいね一覧", "/users/#{@user.id}" %>
  </div>
  <% end %>
  <div class="primary text-right">
      <div class= "btn btn-primary">
       <%= link_to '記事一覧',"/articles/" %>
      </div>
  </div>
</div>